<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/turkizna_status_bar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">

        <item name="android:windowBackground">@color/turkizna_status_bar</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_transparent_splash</item>

        <item name="windowSplashScreenAnimationDuration">10000</item>

        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>

    </style>

    <style name="Rentyo_DatePickerDialog_Theme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#ffffff</item>
        <item name="colorPrimary">#ffffff</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:datePickerStyle">@style/Rentyo_DatePickerStyle</item>
    </style>

    <style name="Rentyo_DatePickerStyle" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">#076b6a</item>
        <item name="android:colorControlActivated">#076b6a</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

</resources>